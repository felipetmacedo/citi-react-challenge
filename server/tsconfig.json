{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "ES2017"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@controllers": [
        "./src/controllers"
      ],
      "@repositories": [
        "./src/repositories"
      ],
      "@database": [
        "./src/database"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests"
  ]
}